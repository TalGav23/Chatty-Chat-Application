<Window x:Class="TalMiniProject___Chatty.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalMiniProject___Chatty"
        mc:Ignorable="d"
   WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
     
        Title="MainWindow" Height="1080" Width="1920" KeyDown="Window_KeyDown">

    <Grid x:Name="gridi">
        <Grid.RowDefinitions>
            <RowDefinition Height="129*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="380*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233*"/>
            <ColumnDefinition Width="281*"/>
            <ColumnDefinition Width="1406*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Images\ChatHub\ChatHub.png"/>
        </Grid.Background>
        <Label x:Name="user" Content="" Grid.Column="1" Grid.Row="1" Foreground="White"  FontSize="34" FontFamily="#RockoUltraFLF" Cursor="Hand" Visibility="Hidden"/>
    </Grid>
</Window>
